@model IEnumerable<CatmashWebApplication.Models.Cat>

@{
    ViewData["Title"] = "Ranking";
}

<h3>Ranking</h3>


<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            
            <div class="col-sm-4 my-3">
                <div class="card text-white bg-dark">
                    <img src="@(item.Url)" class="card-img-top rank" alt="...">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Rank</h5>
                                <p class="card-text">
                                    @(ViewBag.rank = (int)ViewBag.rank + 1)

                                </p>
                            </div>
                            <div class="col">
                                <h5 class="card-title">Score</h5>
                                <p>
                                    @(item.Score)
                                    <img src="~/img/logo.png" alt="logo" class="littleicon" />
                                </p>
                            </div>
                        </div>
                       
                        
                    </div>
                </div>
                </div>
            
        }

            </div>
        </div>